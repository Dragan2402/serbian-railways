<Window x:Class="SerbianRailways.manager_pages.UpdateRideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SerbianRailways.manager_pages"
        mc:Ignorable="d"
        Title="Srbija Voz-Izmena vožnje" Icon="/AppLogo.png" Height="500" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label VerticalAlignment="Center" Margin="0,50,0,20" HorizontalAlignment="Center">Odabir voza:</Label>
            <ComboBox Name="trainsCMBX" Margin="0,20,0,20" HorizontalAlignment="Center"  VerticalAlignment="Center" ItemsSource="{Binding Path=Trains}" />
            <Label VerticalAlignment="Center" Margin="0,20,0,20" HorizontalAlignment="Center">Odabir linije:</Label>
            <ComboBox Name="linesCMBX" Margin="0,20,0,20" HorizontalAlignment="Center"  VerticalAlignment="Center" ItemsSource="{Binding Path=Lines}" />
            <Label VerticalAlignment="Center" Margin="0,10,0,10" HorizontalAlignment="Center">Dani kojima se obavjla vožnja:</Label>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <CheckBox Margin="0,0,10,0" x:Name="mondayCB" IsChecked="False">Pon</CheckBox>
                <CheckBox Margin="0,0,10,0" x:Name="tuesdayCB" IsChecked="False">Uto</CheckBox>
                <CheckBox Margin="0,0,10,0" x:Name="wednesdayCB" IsChecked="False">Sre</CheckBox>
                <CheckBox Margin="0,0,10,0"  x:Name="thursdayCB" IsChecked="False">Čet</CheckBox>
                <CheckBox Margin="0,0,0,0" x:Name="fridayCB" IsChecked="False">Pet</CheckBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                <CheckBox Margin="0,0,10,0" x:Name="saturdayCB" IsChecked="False">Sub</CheckBox>
                <CheckBox x:Name="sundayCB" IsChecked="False">Ned</CheckBox>
            </StackPanel>
            <WrapPanel HorizontalAlignment="Center" Margin="0,30,0,0" >
                <Button HorizontalAlignment="Left" Margin="0,0,5,0" MinHeight="30" ToolTip="Ctrl+D" MinWidth="70" Click="UpdateRideBtn" >Izmeni</Button>
                <Button HorizontalAlignment="Right"  MinHeight="30" MinWidth="70"  ToolTip="Ctrl+O" Click="Cancel_Btn">Odustani</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
